journal = {Journal of Hydrology},
number = {1-2},
pages = {45--59},
pmid = {470},
title = {{An introduction to the European Hydrological System - Systeme Hydrologique Europeen, "SHE", 1: History and philosophy of a physically-based, distributed modelling system}},
volume = {87},
year = {1986}
}
