isbn = {0022-1694},
issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Floodplain inundation,Floodplains,Hydraulic modelling,Synthetic aperture radar},
pages = {54--77},
title = {{A simple raster-based model for flood inundation simulation}},
volume = {236},
year = {2000}
}
